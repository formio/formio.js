{
  "parser": "babel-eslint",
  "extends": "formio",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "max-len": [
      "off",
      {
        "code": 160,
        "ignoreComments": true,
        "ignoreStrings": true
      }
    ],
    "max-statements": [2, 40],
    "no-console": "off",
    "prefer-const": "error",
    "prefer-template": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ]
  }
}
