<div class="form-check checkbox" ref="formCheck">
    <label class="{{ctx.input.labelClass}} form-check-label">
        <{{ctx.input.type}}
        ref="input"
        {% for (var attr in ctx.input.attr) { %}
        {{attr}}="{{ctx.input.attr[attr]}}"
        {% } %}
        {% if (ctx.checked) { %}checked=true{% } %}
        >
        {% if (!ctx.self.labelIsHidden()) { %}<span>{{ctx.input.label}}</span>{% } %}
        {% if (ctx.component.tooltip) { %}
        <i ref="tooltip" class="{{ctx.iconClass('question-sign')}} text-muted"></i>
        {% } %}
        {{ctx.input.content}}
    </{{ctx.input.type}}>
    </label>
</div>
